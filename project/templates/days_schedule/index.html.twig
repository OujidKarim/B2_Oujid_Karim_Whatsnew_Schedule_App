{% extends 'base.html.twig' %}

{% block title %}DaysSchedule index{% endblock %}

{% block body %}
    <h1>DaysSchedule index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Grades</th>
                <th>subjects</th>
                <th>Schedules</th>
                <th>Weekdays</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for days_schedule in days_schedules %}
            <tr>
                <td>{{ days_schedule.grades.value }}</td>
                <td>{{ days_schedule.subject }}</td>
                <td>{{ days_schedule.schedules.value }}</td>
                <td>{{ days_schedule.weekdays.value }}</td>
                <td>
                    <a href="{{ path('app_days_schedule_show', {'id': days_schedule.id}) }}">show</a>
                    <a href="{{ path('app_days_schedule_edit', {'id': days_schedule.id}) }}">edit</a>
                    <a href="{{ path('app_days_schedule_delete', {'id': days_schedule.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_days_schedule_new') }}">Create new</a>
{% endblock %}
